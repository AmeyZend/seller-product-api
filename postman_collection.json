                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"email\": \"admin@test.com\",\n    \"password\": \"password\"\n}"
                },
                "url": {
                    "raw": "http://127.0.0.1:8000/api/admin/login",

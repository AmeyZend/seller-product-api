                "method": "POST",
                "header": [
                    { "key": "Content-Type", "value": "application/json" },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{admin_token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"name\": \"Seller One\",\n  \"email\": \"seller@test.com\",\n  \"mobile\": \"9999999999\",\n  \"country\": \"India\",\n  \"state\": \"MH\",\n  \"skills\": [\"PHP\", \"Laravel\"],\n  \"password\": \"password\"\n}"
                },
                "url": {
